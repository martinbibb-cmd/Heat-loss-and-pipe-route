{
  "name": "heating-design",
  "version": "1.0.0",
  "description": "Professional heating system design tool with heat loss calculations and pipe routing",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "npm run dev --workspace=@heating-design/api",
    "dev:web": "npm run dev --workspace=@heating-design/web",
    "build": "npm run build:api && npm run build:web",
    "build:api": "npm run build --workspace=@heating-design/api",
    "build:web": "npm run build --workspace=@heating-design/web",
    "test": "npm run test --workspaces",
    "test:api": "npm run test --workspace=@heating-design/api",
    "test:web": "npm run test --workspace=@heating-design/web",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "prisma": "^5.7.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "author": "Heating Design Team",
  "license": "MIT"
}
